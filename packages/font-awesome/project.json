{
  "name": "font-awesome",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/font-awesome/src",
  "prefix": "ng",
  "tags": [],
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/angular:package",
      "outputs": ["{workspaceRoot}/dist/{projectRoot}"],
      "options": {
        "project": "packages/font-awesome/ng-package.json"
      },
      "configurations": {
        "production": {
          "tsConfig": "packages/font-awesome/tsconfig.lib.prod.json"
        },
        "development": {
          "tsConfig": "packages/font-awesome/tsconfig.lib.json"
        }
      },
      "defaultConfiguration": "production"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/font-awesome/jest.config.ts"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "packages/font-awesome/**/*.ts",
          "packages/font-awesome/**/*.html",
          "packages/font-awesome/package.json",
          "packages/font-awesome/regular/**/*.ts",
          "packages/font-awesome/regular/**/*.html",
          "packages/font-awesome/solid/**/*.ts",
          "packages/font-awesome/solid/**/*.html",
          "packages/font-awesome/brands/**/*.ts",
          "packages/font-awesome/brands/**/*.html"
        ]
      }
    },
    "deploy": {
      "executor": "ngx-deploy-npm:deploy",
      "options": {
        "access": "public"
      }
    }
  }
}
